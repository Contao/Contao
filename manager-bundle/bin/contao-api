#!/usr/bin/env php
<?php

declare(strict_types=1);

/*
 * This file is part of Contao.
 *
 * (c) Leo Feyer
 *
 * @license LGPL-3.0-or-later
 */

use Composer\XdebugHandler\XdebugHandler;
use Contao\ManagerBundle\Api\Application;

error_reporting(-1);
set_time_limit(0);
@ini_set('display_startup_errors', '1');
@ini_set('display_errors', '1');
@ini_set('zlib.output_compression', '0');

if (file_exists(__DIR__.'/../../../../autoload.php')) {
    $projectDir = \dirname(__DIR__, 5);
} else {
    $projectDir = \dirname(__DIR__, 4);
}

/** @var Composer\Autoload\ClassLoader $loader */
$loader = require $projectDir.'/vendor/autoload.php';

// Automatically disable xdebug if enabled. You can enable it running "CONTAO_API_ALLOW_XDEBUG=1 vendor/bin/contao-api"
$xdebug = new XdebugHandler('CONTAO_API');
$xdebug->check();
unset($xdebug);

$application = new Application($projectDir);
$application->run();
