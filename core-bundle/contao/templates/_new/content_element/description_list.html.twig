{% extends "@Contao/content_element/_base.html.twig" %}

{% block content %}
    <dl>
        {% for description in descriptions %}
            {% if description.term is not empty %}
                <dt>{{ description.term|insert_tag_raw }}</dt>
            {% endif %}
            {% if description.details is not empty %}
                <dd>{{ description.details|insert_tag_raw }}</dd>
            {% endif %}
        {% endfor %}
    </dl>
{% endblock %}
