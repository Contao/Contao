{% if not searchable|default(true) %}
<!-- indexer::stop -->
{%- endif %}

{% block before %}{% endblock %}
{% block wrapper %}
    {# Wrapper attributes: add the user defined id/classes, also add the template name (e.g. "content_element/text") as a class #}
    {% set attributes = attrs(attributes|default)
        .setIfExists('id', element_html_id)
        .addClass(element_css_classes, template)
    %}

    {# Wrapper element around headline and content #}
    <{% block wrapper_tag %}div{% endblock %}{% block attributes %}{{ attributes }}{% endblock %}>
        {% block inner %}
            {% block headline %}
                {% if headline.text %}
                    {% include "@Contao/component/_headline.html.twig" with headline only %}
                {% endif %}
            {% endblock %}

            {% block content %}{% endblock %}
        {% endblock %}
    </{{ block('wrapper_tag') }}>
{% endblock %}
{% block after %}{% endblock %}

{% if not searchable|default(true) -%}
<!-- indexer::continue -->
{% endif %}
