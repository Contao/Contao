{% extends '@ContaoCore/Backend/Layout/page.html.twig' %}

{% block body %}

    <div class="relative min-h-screen flex flex-col">
        {% include '@ContaoCore/Backend/Section/navbar.html.twig' %}

        <div class="relative flex-grow bg-white overflow-hidden flex">

            <div class="hidden md:flex md:flex-shrink-0 bg-gray-100">
                <div class="w-64 flex flex-col">
                    {% include '@ContaoCore/Backend/Section/sidebar.html.twig' %}
                </div>
            </div>

            <div class="flex-1 flex flex-col">
                <main class="flex-1 overflow-y-auto focus:outline-none">
                    <div class="relative max-w-4xl mx-auto md:px-8 xl:px-0">
                        <div class="pt-10 pb-16">
                            <div class="px-4 sm:px-6 md:px-0">
                                <h1 class="text-3xl font-extrabold text-gray-900">{{ headline|raw }}</h1>
                            </div>
                            <div class="px-4 sm:px-6 md:px-0">
                                {{ main|raw }}
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

{% endblock %}
