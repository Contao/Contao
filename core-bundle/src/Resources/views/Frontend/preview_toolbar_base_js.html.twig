<div class="cto-toolbar"></div>

<style>
    .cto-toolbar {
        font: 400 .875rem/1 -apple-system, system-ui, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        color: #444;
        background: #f2f2f2;
        overflow: hidden;
        position: sticky;
        top: 0;
        z-index: 99999;
        display: grid;
        grid-template: auto / 1fr auto;
    }

    .cto-toolbar--hidden {
        position: fixed;
        right: 0;
    }

    .cto-toolbar--hidden form {
        display: none;
    }

    .cto-toolbar.ajax-loading .formbody {
        pointer-events: none;
        opacity: 0.5;
    }

    .cto-toolbar .formbody {
        display: flex;
        align-items: baseline;
        justify-content: flex-end;
        padding: .33em 0;
        margin-right: .5em;
    }

    .cto-toolbar .formbody > div {
        display: flex;
        align-items: baseline;
        margin-left: 1em;
    }

    .cto-toolbar label {
        width: auto;
        margin: 0 .25em 0 0;
        font-weight: 500;
    }

    .cto-toolbar input[type="text"] {
        margin: 0;
        box-sizing: border-box;
        padding: 5px 6px 6px;
        border: 1px solid #aaa;
        border-radius: 2px;
        background-color: #fff;
        -moz-appearance: none;
        -webkit-appearance: none;
    }

    .cto-toolbar .tl_select {
        margin: 0;
        box-sizing: border-box;
        border: 1px solid #aaa;
        padding: 5px 22px 6px 6px;
        border-radius: 2px;
        background: #fff url(data:image/svg+xml;base64,) right -16px center no-repeat;
        background-origin: content-box;
        cursor: pointer;
        text-transform: none;
        -moz-appearance: none;
        -webkit-appearance: none;
    }

    .cto-toolbar .tl_submit {
        padding: .175em 1em;
        border: 1px solid #aaa;
        border-radius: 2px;
        box-sizing: border-box;
        cursor: pointer;
        background: #eee;
        transition: background .2s ease;
        font-family: inherit;
        font-size: 1em;
        margin-left: 1em;
    }

    .cto-toolbar .tl_submit:hover {
        color: inherit;
        background-color: #f6f6f6;
    }

    .cto-toolbar .tl_submit:active {
        color: #aaa;
    }

    .cto-toolbar__close {
        border-left: 1px solid #dddddd;
    }

    .cto-toolbar__close a {
        width: 1.5em;
        font-weight: 600;
        font-size: 2em;
        color: #444444;
        text-decoration: none;
        display: block;
        text-align: center;
        height: 1.5em;
        line-height: 1.45em;
    }

    .cto-toolbar__close a:hover {
        background: rgba(0, 0, 0, .03);
    }

    .cto-toolbar__close a:hover {
        color: #666666;
    }
</style>
<script>/*<![CDATA[*/
    (function () {
        const toolbar = document.querySelector('.cto-toolbar');

        function request(method, uri, body, callback, addClass = true) {
            body = body || null;
            const request = new XMLHttpRequest();
            request.open(method, uri, true);
            request.setRequestHeader('X-Requested-With', 'XMLHttpRequest');

            if (addClass) {
                toolbar.classList.add('ajax-loading');
            }

            request.onload = function () {
                toolbar.classList.remove('ajax-loading');

                callback.apply(this);
            };
            request.send(body)
        }

        // Fetch toolbar
        request('GET', '{{ action }}', null, function () {
            if (200 === this.status) {
                toolbar.innerHTML = this.responseText;

                const event = new Event('cto-toolbar-loaded');
                window.dispatchEvent(event);
            } else {
                toolbar.innerHTML = '<p>Error while loading the preview bar.</p>';
            }
        });

        // Js for the authenticator
        window.addEventListener("cto-toolbar-loaded", function () {
            const form = toolbar.querySelector('input[name="FORM_SUBMIT"][value="tl_switch"]').form;
            if (!form) {
                return;
            }
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                const formData = new FormData(form);

                request('POST', form.action, formData, function () {
                    if (200 === this.status) {
                        location.reload();
                    } else {
                        location.reload();
                    }
                });
            });

            if (document.createElement('datalist') && window.HTMLDataListElement) {
                const userField = form.querySelector('input[name="user"]');
                const userList = form.querySelector('datalist[id="userlist"]');

                userField.addEventListener('keyup', function () {
                    if (userField.value.length < 2) {
                        return;
                    }

                    const body = {
                        FORM_SUBMIT: 'datalist_members',
                        REQUEST_TOKEN: form.querySelector('input[name="REQUEST_TOKEN"]').value,
                        value: userField.value
                    };

                    request('POST', form.action, new URLSearchParams(body), function () {
                        userList.innerHTML = '';
                        JSON.parse(this.response).forEach(item => {
                            const option = document.createElement('option');
                            option.value = item;
                            userList.appendChild(option);
                        });
                    }, false);
                });
            }

            // Collapse toolbar
            toolbar.querySelector('.cto-toolbar__close').addEventListener('click', function (e) {
                e.preventDefault();
                toolbar.classList.toggle('cto-toolbar--hidden');
            });
        });
    })();
    /*]]>*/</script>
